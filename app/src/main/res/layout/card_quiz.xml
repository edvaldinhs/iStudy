<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <TextView
        android:id="@+id/titulo_portugues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lexend_semibold"
        android:text="MatÃ©ria"
        android:textColor="@color/aristofany_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/material_portugues"
        app:layout_constraintEnd_toEndOf="@+id/material_portugues"
        app:layout_constraintStart_toStartOf="@+id/material_portugues"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/material_portugues"
