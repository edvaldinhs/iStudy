<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telas.TelaDisciplinas">

    <View
        android:id="@+id/material_portugues"
        android:layout_width="260dp"
        android:layout_height="125dp"
        android:background="@drawable/botao_portugues"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/material_matematica"
        />

    <View
        android:id="@+id/material_matematica"
        android:layout_width="260dp"
        android:layout_height="125dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/botao_matematica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/material_portugues"
        app:layout_constraintBottom_toTopOf="@+id/quiz"
        />

    <View
        android:id="@+id/quiz"
        android:layout_width="260dp"
        android:layout_height="125dp"
        android:background="@drawable/botao_quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/material_matematica" />
</androidx.constraintlayout.widget.ConstraintLayout>